{
    "info": {
        "name": "Blog Platform API",
        "description": "API collection for Blog Platform with Admin Panel",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5000/api"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@example.com\",\n  \"username\": \"admin\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": "{{base_url}}/auth/admin/register"
                    }
                },
                {
                    "name": "Login Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": "{{base_url}}/auth/admin/login"
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.access_token) {",
                                    "    pm.collectionVariables.set('token', jsonData.access_token);",
                                    "}"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Public Posts",
            "item": [
                {
                    "name": "Get All Posts",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/posts?page=1&per_page=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "posts"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "per_page",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Post by Slug",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/posts/my-first-post"
                    }
                },
                {
                    "name": "Get All Tags",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/posts/tags"
                    }
                },
                {
                    "name": "Get Posts by Tag",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/posts/tags/technology"
                    }
                }
            ]
        },
        {
            "name": "Comments",
            "item": [
                {
                    "name": "Get Comments for Post",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/posts/1/comments"
                    }
                },
                {
                    "name": "Submit Comment (Guest)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"guest_name\": \"John Doe\",\n  \"guest_email\": \"john@example.com\",\n  \"content\": \"Great article! Thanks for sharing.\"\n}"
                        },
                        "url": "{{base_url}}/posts/1/comments"
                    }
                }
            ]
        },
        {
            "name": "Admin - Posts",
            "item": [
                {
                    "name": "Get All Posts (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/admin/posts"
                    }
                },
                {
                    "name": "Get Post by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/admin/posts/1"
                    }
                },
                {
                    "name": "Create Post",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"My First Blog Post\",\n  \"content\": \"<p>This is the content of my first blog post. It supports <strong>HTML</strong> formatting.</p>\",\n  \"excerpt\": \"A brief introduction to my first post\",\n  \"tags\": [\"technology\", \"web\"],\n  \"status\": \"published\"\n}"
                        },
                        "url": "{{base_url}}/admin/posts"
                    }
                },
                {
                    "name": "Update Post",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Post Title\",\n  \"status\": \"published\"\n}"
                        },
                        "url": "{{base_url}}/admin/posts/1"
                    }
                },
                {
                    "name": "Delete Post",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/admin/posts/1"
                    }
                },
                {
                    "name": "Upload Image",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "image",
                                    "type": "file",
                                    "src": ""
                                }
                            ]
                        },
                        "url": "{{base_url}}/admin/posts/upload"
                    }
                }
            ]
        },
        {
            "name": "Admin - Comments",
            "item": [
                {
                    "name": "Get All Comments",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/admin/comments?status=pending",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "admin",
                                "comments"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "pending"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Approve Comment",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"action\": \"approve\"\n}"
                        },
                        "url": "{{base_url}}/admin/comments/1"
                    }
                },
                {
                    "name": "Reject Comment",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"action\": \"reject\"\n}"
                        },
                        "url": "{{base_url}}/admin/comments/1"
                    }
                },
                {
                    "name": "Delete Comment",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/admin/comments/1"
                    }
                }
            ]
        },
        {
            "name": "RSS",
            "item": [
                {
                    "name": "Get RSS Feed",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/rss"
                    }
                },
                {
                    "name": "Get RSS Info",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/rss/info"
                    }
                }
            ]
        },
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": "{{base_url}}/health"
            }
        }
    ]
}